{
  "name": "expect-mcp",
  "version": "0.7.0",
  "description": "Custom matchers for testing Model Context Protocol (MCP) integrations with Vitest and Jest.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "packageManager": "pnpm@8.15.4",
  "bin": {
    "expect-mcp": "./dist/main-cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cjs": {
      "types": "./dist/index.d.ts",
      "default": "./dist/cjs/index.cjs"
    },
    "./vitest": {
      "types": "./dist/vitest-setup.d.ts",
      "default": "./dist/vitest-setup.js"
    },
    "./vitest-setup": {
      "types": "./dist/vitest-setup.d.ts",
      "default": "./dist/vitest-setup.js"
    },
    "./jest-setup": {
      "types": "./dist/jest-setup.d.ts",
      "default": "./dist/jest-setup.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node esbuild.config.js",
    "typecheck": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:samples": "vitest --config samples/vitest.config.ts",
    "update-jest-tests": "node --experimental-strip-types bin/update-jest-tests.ts",
    "test:jest": "jest --detectOpenHandles --maxWorkers=1 --no-cache",
    "test:all": "pnpm run test && pnpm run test:jest",
    "prepare": "pnpm run clean && pnpm run build",
    "start:docs": "cd docs-site && pnpm run start"
  },
  "keywords": [
    "vitest",
    "jest",
    "expect",
    "matchers",
    "mcp",
    "model context protocol",
    "testing"
  ],
  "author": "andyfischer",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "vitest": "^1.5.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": true
    },
    "jest": {
      "optional": true
    }
  },
  "devDependencies": {
    "@facetlayer/subprocess-wrapper": "1.1.0",
    "@jest/globals": "^29.7.0",
    "@modelcontextprotocol/sdk": "1.18.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "esbuild": "0.25.9",
    "expect-mcp": "file:.",
    "jest": "^29.7.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "@facetlayer/parse-stdout-lines": "1.1.0",
    "zod": "4.1.11"
  }
}
