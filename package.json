{
  "name": "expect-mcp",
  "version": "0.7.0",
  "description": "Custom Vitest matchers for testing Model Context Protocol (MCP) integrations.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "packageManager": "pnpm@8.15.4",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./vitest": {
      "types": "./dist/vitest.d.ts",
      "default": "./dist/vitest.js"
    },
    "./vitest-setup": {
      "types": "./dist/vitest.d.ts",
      "default": "./dist/vitest.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node esbuild.config.js",
    "typecheck": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:samples": "vitest --config samples/vitest.config.ts"
  },
  "keywords": [
    "vitest",
    "expect",
    "matchers",
    "mcp",
    "model context protocol",
    "testing"
  ],
  "author": "andyfischer",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "peerDependencies": {
    "vitest": "^1.5.0"
  },
  "devDependencies": {
    "@facetlayer/subprocess-wrapper": "1.1.0",
    "@types/node": "^20.11.0",
    "esbuild": "0.25.9",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "@facetlayer/parse-stdout-lines": "1.0.0",
    "@modelcontextprotocol/sdk": "1.18.2",
    "zod": "4.1.11"
  }
}
